2) LED blinking 10 times 
#include <LPC17xx.h>

void delay(unsigned long int di);

int main()
{
	int count =0;
	SystemInit();
	LPC_SC->PCONP=0X00008000;
	LPC_GPIO1->FIOMASK=0xDFFFFFFF;   // FIOMASK3 = 0xDF;
	LPC_GPIO1->FIODIR=0X20000000;    // FIODIR3 = 0x20;       // if the corresponding bit is set as 1 in the DIR regiister it acts as output , if 0 acts as input 
	
	while(count < 10) // superloop : it will never come out
	{
		LPC_GPIO1->FIOSET=0x20000000;
		delay(0x700000);
		LPC_GPIO1->FIOCLR=0x20000000;
		delay(0x700000);
		count += 1;
	}
}

void delay(unsigned long int di)
{
	unsigned long int i;
	for(i=0;i<di;i++)
	{
	}
	
}
