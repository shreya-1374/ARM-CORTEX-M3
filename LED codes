5) use LED as a source to indicate / work as a fire alarm


#include<LPC17XX.h>

int main()
{
	unsigned char val;
	SystemInit();
	LPC_SC->PCONP= 0X00008000;
	LPC_GPIO1->FIOMASK= 0XDFFFFFFF; //for output port P1.29
	LPC_GPIO1->FIODIR=0X20000000;
	
	LPC_GPIO0->FIOMASK0=0XFE; //THIS IS FOR INPUT port p0.0
	LPC_GPIO0->FIODIR0=0XFE;
	
	while(1)
	{
		val= LPC_GPIO0->FIOPIN0; // val= 0x01 or 0x00
		if(val == 0x01)
		{
			LPC_GPIO1->FIOSET3=0X20;
			break;
		}
	}
}
