1)WAP to blink LED at P2.0

#include <LPC17xx.h>

void delay(void) {
    for (volatile int i = 0; i < 1000000; i++);  // crude delay
}

int main(void) {
    // Configure P2.0 as output
    LPC_GPIO2->FIODIR |= (1 << 0);

    while (1) {
        // Set pin P2.0 HIGH
        LPC_GPIO2->FIOSET = (1 << 0);
        delay();

        // Clear pin P2.0 LOW
        LPC_GPIO2->FIOCLR = (1 << 0);
        delay();
    }
}
