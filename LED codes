3) blink 4 LEDs simultaneously
#include <LPC17xx.h>

void delay(unsigned long int di);

int main()
{
    SystemInit();
    LPC_SC->PCONP |= (1 << 15); // Ensure GPIO power is on

    // Configure P0.21, P0.22, P0.23, P0.24 as outputs
    LPC_GPIO0->FIODIR |= (1 << 21) | (1 << 22) | (1 << 23) | (1 << 24);

    while(1)
    {
        // Turn ON LEDs (active-low, so set pins to low)
        LPC_GPIO0->FIOCLR = (1 << 21) | (1 << 22) | (1 << 23) | (1 << 24);
        delay(0x700000);

        // Turn OFF LEDs (set pins to high)
        LPC_GPIO0->FIOSET = (1 << 21) | (1 << 22) | (1 << 23) | (1 << 24);
        delay(0x700000);
    }
}

void delay(unsigned long int di)
{
    unsigned long int i;
    for(i=0; i<di; i++);
}
