5) Assume 8 LEDs are connected at P0.21 - P0.28 , WAP to read elements defined in array a[10]

#include<LPC17xx.h>
void delay(unsigned long int di);

int main()
{
	unsigned char a[10]={0x01,0x02,0x03,0x04,0x05,0x06,0x07,0x08,0x09,0x10};
	SystemInit();
	LPC_SC->PCONP= 0x00008000;
	LPC_GPIO0->FIOMASKH = 0xe01f;   //output though the LED's
	LPC_GPIO0->FIODIRH= 0x1fe0;`11
	
	while(1)
	{
		unsigned char i=0;
		for(i=0;i<10;i++)
		{
			LPC_GPIO0->FIOPINH= a[i] << 5;
			delay(0x50000);
		}
		break;
		
	}
}

void delay(unsigned long int di)
{
	unsigned long int i;
	for(i=0;i<di;i++)
	{
	}
}


