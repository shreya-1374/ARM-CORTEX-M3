6) implement an 8 bit up counter 

//3.8bit up counter

#include<LPC17xx.h>

void delay(unsigned long int di);

int main()
{
	unsigned char val;
	unsigned char count;
	SystemInit();
	LPC_SC->PCONP= 0x00008000;
	LPC_GPIO0->FIOMASKH = 0xe01f;   //output though the LED's
	LPC_GPIO0->FIODIRH= 0x1fe0;
	
	LPC_GPIO0->FIOMASK0= 0xFE;
	LPC_GPIO0->FIODIR0= 0XFE;
	count =0;
	while(1)
	{
		val= LPC_GPIO0->FIOPIN0;
		if(val == 0x01)
		{
			count=count+1;
			LPC_GPIO0->FIOPINH= count<<5;
			delay(0x500000);
		}
		else
		{
			count= count-1;
			LPC_GPIO0->FIOPINH= count<<5;
			delay(0x500000);
		}
	}
}

void delay(unsigned long int di)
{
	unsigned long int i;
	for(i=0;i<di;i++)
	{
	}
}
