3)wap to recieve a string of 12 elements and check if the recieved string matches with the predefined string , if yes , turn on LED 

#include <LPC17xx.h>
#include <string.h>

//initialise uart
void uart0_init(void); //this function takes no arguments and returns unsigned characters
unsigned char uart0_rx(void);
void uart0_tx(unsigned char ch);

int main(void) //takes int input but doesnt return any
{
	//now we need to recieve 12 char + 1 null char
	unsigned char recieved[13];
	//the recieved char must be compared with predefined string 
	unsigned char predefined[] = "shreyaaaaaaa";
	int i , match;
	
	SystemInit();
	
	//choose P0.2 and P0.3		
	//set the P0.2 as txd (45 - 01) and P0.3 as rxd (67 - 01)
	//0000 0101 0000
	LPC_PINCON->PINSEL0 |= 0X00000050;
	
	//LED is connected to P1.25 as output 
	//LPC_GPIO1->FIOMASK3=0xFD;  // 1111 1101  [31,30,29,28,27,26,25,24]
	//LPC_GPIO1->FIODIR3=0X02;   // 0000 0010  [p1.25 as output] 
	LPC_PINCON->PINSEL3 &= ~(3 << 18);  // ensure GPIO function for P1.25
  LPC_GPIO1->FIODIR |= (1 << 25);     // set P1.25 as output
		
	uart0_init(); //initialises uart 0
	
	//recieve the 12 characters 
	while(1)
	{
		for (i=0;i<12;i++)
		{
			//the recieved char is stored in array
			recieved[i] = uart0_rx();
			}
		recieved[12] = '\0';//last char is null
		
	//now we have recieved the complete string 
	//we must compare with the predefined string 
	match = 1;
	for (i=0 ; i<12 ; i++)
	{
	  if(recieved[i] != predefined[i])
	  {
	    match = 0;//mismatch
		  break;
		}
	}
	
	//operating the led to show if matched or mismatched P1.25
	if (match)
	{
	  //turn on led
	  //LPC_GPIO1->FIOSET = 0X02;
		LPC_GPIO1->FIOSET = (1<<25);
		uart0_tx('M');//just to confirm in the terminal
	  }
	else
	{ 
	  //turn off led
	  //LPC_GPIO1->FIOCLR = 0X02;
		LPC_GPIO1->FIOCLR = (1<<25);
		uart0_tx('N');//just to confirm in the terminal
	  }
	  }
	  }
	  
//uart initialisation 	  
void uart0_init(void)
	{
		LPC_UART0->LCR = 0x83;
		LPC_UART0->DLM = 0X00;
		LPC_UART0->DLL = 0X75;
		LPC_UART0->FDR = 0X00000010;
		LPC_UART0->LCR = 0X03;
	}	

//uart reciever
unsigned char uart0_rx(void)
{
		unsigned char val;
    while (!(LPC_UART0->LSR & 0x01));   // Wait for Receiver Data Ready (bit0)
    val = LPC_UART0->RBR;              // Return received byte
		return val;
}

//uart transmitter
void uart0_tx(unsigned char ch)
{
    while (!(LPC_UART0->LSR & 0x20));   // Wait until THR empty (bit5)
    LPC_UART0->THR = ch;                // Send character
}

---------------------------------------------------------------------------------------------------------------------------------------------------------------------
4)receiving a string of 12 characters , comparing it with the predefined string and displaying whether its a match or a mismatch on the LCD
#include <LPC17xx.h>
#include <string.h>

void uart0_init(void);
unsigned char uart0_rx(void);
void delay(unsigned long int di);
void lcd_string(unsigned char *str);   
void lcdwrt(unsigned char ch);

int main(void)
{
    unsigned char cmd[] = {0x38,0x0E,0x06,0x01,0x80};
    unsigned char str[13], predefined[] = "24004F5A8B7C";
    unsigned char i, match;

    SystemInit();

    // UART pins P0.2 (TXD0) and P0.3 (RXD0)
    LPC_PINCON->PINSEL0 |= 0x00000050;

    // LCD data and control pins
    LPC_GPIO0->FIOMASKH = 0xE01F; // P0.28–P0.21 for LCD data
    LPC_GPIO0->FIODIRH  = 0x1FE0; // set as output
    LPC_GPIO2->FIOMASK1 = 0xC7;   // P2.11–P2.13 for RS,RW,EN
    LPC_GPIO2->FIODIR1  = 0x38;   // set as output

    uart0_init();

    // LCD initialization
    LPC_GPIO2->FIOCLR1 = 0x18;
    for(i=0; i<5; i++)
    {
        lcdwrt(cmd[i]);
    }

    while(1)
    {
        // Receive 12 chars from UART
        for(i=0; i<12; i++)
        {
            while((LPC_UART0->LSR & 0x01) != 0x01);
            str[i] = LPC_UART0->RBR;
        }
        str[12] = '\0';

        // Compare with predefined string
        match = 1;
        for(i=0; i<12; i++)
        {
            if(str[i] != predefined[i])
            {
                match = 0;
                break;
            }
        }

        // Display result on LCD
        LPC_GPIO2->FIOCLR1 = 0x18; // RS=RW=0
        lcdwrt(0x01);              // clear LCD
        lcdwrt(0x80);              // first line

        if(match)
            lcd_string("Matched");
        else
            lcd_string("Not Matched");

        delay(5000000);

        LPC_GPIO2->FIOCLR1 = 0x18;
        lcdwrt(0x01);
        lcdwrt(0x80);
    }
}

void uart0_init(void)
{
    LPC_UART0->LCR = 0x83;  // DLAB = 1, 8-bit word length
    LPC_UART0->DLM = 0x00;
    LPC_UART0->DLL = 0x75;  // Baud rate ~9600 for 25MHz PCLK
    LPC_UART0->FDR = 0x10;  // Fractional divider
    LPC_UART0->LCR = 0x03;  // DLAB = 0
}

void lcdwrt(unsigned char ch)
{
    LPC_GPIO0->FIOPIN = ch << 21;
    LPC_GPIO2->FIOSET1 = 0x20; // EN=1
    delay(500);
    LPC_GPIO2->FIOCLR1 = 0x20; // EN=0
    delay(500000);
}

void lcd_string(unsigned char *str)
{
    unsigned char i;
    LPC_GPIO2->FIOSET1 = 0x08; // RS=1 (data)
    LPC_GPIO2->FIOCLR1 = 0x10; // RW=0 (write)
    for(i=0; str[i] != '\0'; i++)
    {
        lcdwrt(str[i]);
    }
}

void delay(unsigned long int di)
{
    unsigned long int i;
    for(i=0; i<di; i++);
}
------------------------------------------------------------------------------------------------------------------------------------------------------------------
continuation but giving multiple access - RFID authentication system

//multiple acces
#include <LPC17xx.h>
#include <string.h>

void uart0_init(void);
void delay(unsigned long int di);
void lcd_string(unsigned char *str);   
void lcdwrt(unsigned char ch);

int main(void)
{
    unsigned char cmd[] = {0x38,0x0E,0x06,0x01,0x80};
    unsigned char str[13];
    unsigned char predefined[] = "09008206A825#7500398BBC7B#37009411C122#";  // all IDs in one string
    unsigned char i, j, k, match;

    SystemInit();

    // UART0 init: P0.2 (TXD0), P0.3 (RXD0)
    LPC_PINCON->PINSEL0 |= 0x00000050;

    // LCD pins config
    LPC_GPIO0->FIOMASKH = 0xE01F;
    LPC_GPIO0->FIODIRH  = 0x1FE0;
    LPC_GPIO2->FIOMASK1 = 0xC7;
    LPC_GPIO2->FIODIR1  = 0x38;

    uart0_init();

    // LCD initialization
    LPC_GPIO2->FIOCLR1 = 0x18;
    for(i=0; i<5; i++)
    {
        lcdwrt(cmd[i]);
    }

    while(1)
    {
        // Receive 12 chars
        for(i=0; i<12; i++)
        {
            while((LPC_UART0->LSR & 0x01) != 0x01);
            str[i] = LPC_UART0->RBR;
        }
        str[12] = '\0';

        // Compare with all IDs in one string
        match = 0;
        for(i=0; predefined[i] != '\0'; i++)
        {
            for(j=0, k=i; j<12 && predefined[k] != '#' && predefined[k]!='\0'; j++, k++)
            {
                if(str[j] != predefined[k])
                    break;
            }

            if(j == 12 && predefined[k] == '#')
            {
                match = 1;
                break;
            }

            // Skip to next ID after #
            while(predefined[i] != '#' && predefined[i] != '\0')
                i++;
        }

        // Display result
        LPC_GPIO2->FIOCLR1 = 0x18;
        lcdwrt(0x01);
        lcdwrt(0x80);

        if(match)
            lcd_string("Matched");
        else
            lcd_string("Not Matched");

        delay(5000000);
    }
}

void uart0_init(void)
{
    LPC_UART0->LCR = 0x83;
    LPC_UART0->DLM = 0x00;
    LPC_UART0->DLL = 0x75;  
    LPC_UART0->FDR = 0x10;
    LPC_UART0->LCR = 0x03;
}

void lcdwrt(unsigned char ch)
{
    LPC_GPIO0->FIOPIN = ch << 21;
    LPC_GPIO2->FIOSET1 = 0x20;
    delay(500);
    LPC_GPIO2->FIOCLR1 = 0x20;
    delay(500000);
}

void lcd_string(unsigned char *str)
{
    unsigned char i;
    LPC_GPIO2->FIOSET1 = 0x08;
    LPC_GPIO2->FIOCLR1 = 0x10;
    for(i=0; str[i] != '\0'; i++)
    {
        lcdwrt(str[i]);
    }
}

void delay(unsigned long int di)
{
    unsigned long int i;
    for(i=0; i<di; i++);
}




